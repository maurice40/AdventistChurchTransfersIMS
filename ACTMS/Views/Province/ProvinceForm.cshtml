@model ACTMS.ViewModels.ProvinceFormViewModel
@{
    ViewBag.Title = "New Province";
    Layout = "~/Views/Shared/_Common.cshtml";
}
<h2>Edit Province </h2>

@using (Html.BeginForm("Save", "Province"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Province.Name)
        @Html.TextBoxFor(m => m.Province.Name, new { @class = "form-control" })
    </div>
    
    <div class="form-group">
        @*@Html.LabelFor(m => m.Province.DivisionId)*@
        <label>Division</label>
        @Html.DropDownListFor(m =>m.Province.DivisionId, new SelectList(Model.Divisions, "Id","Name"), "Select Division" , new { @class = "form-control" })
    </div>
       @Html.HiddenFor(m=> m.Province.id)
     <button class="btn btn-primary col-md-2" type="submit">Save</button>
}


