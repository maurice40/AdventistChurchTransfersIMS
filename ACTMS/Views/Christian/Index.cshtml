@model IEnumerable<ACTMS.Models.Christian>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Common.cshtml";
}
    <div style="
    text-align: center;
    width: 100%;
">
        @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-info mm-fresh-button" }) | @Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-info mm-fresh-button" })|@Html.ActionLink("Create New", "Create", "", new { @class = "btn btn-info" })<h4>All Christians</h4>
</div>

<div class="table-responsive">
   


    <table class="table table-sm" id="mm-christians">
        <thead>
            <tr>
                <th>
                    Names
                </th>

                <th>
                    Church Name
                </th>
                <th>
                    Status
                </th>
                <th>
                    Birth Year
                </th>
                <th>
                    Sex
                </th>

                <th>
                    Marital Status
                </th>

                <th>
                    edit
                </th>
                <th>
                    Delete
                </th>
                <th>
                    Details
                </th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Firstname) @Html.DisplayFor(modelItem => item.Lastname)
                </td>



                <td>
                    @Html.DisplayFor(modelItem => item.Church.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.MartalStatus)
                </td>


                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-info col-md-4" })
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
                <td>
                    @Html.ActionLink("Request Transfer", "Details", new { id = item.Id }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
    </div>
    @section scripts
{
        <script>
            $(document).ready(function () {
                $("#mm-christians").DataTable();

            });
        </script>
    }
