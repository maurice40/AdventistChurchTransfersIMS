            <div class="col-md-12 form-label-group">
                @Html.TextBoxFor(model => model.Email, new { placeholder = "Email", @class = "form-control mm-cont" })
                @Html.ValidationMessageFor(model => model.Email)
                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            </div>

        </div>

        <div class="form-group">
            <div class="col-md-12 form-label-group">
                @Html.TextBoxFor(model => model.Location, new { placeholder = "Location", @class = "form-control mm-cont" })
                @Html.ValidationMessageFor(model => model.Location)
