                @Html.LabelFor(model => model.BirthYear, new { @class = "control-label col-md-2" })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sex, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                Male
                @Html.RadioButtonFor(model => model.Sex, "Male") &nbsp;&nbsp;
                Female
                @Html.RadioButtonFor(model => model.Sex, "Female")
                @Html.ValidationMessageFor(model => model.Sex)
            </div>
        </div>

        <div class="form-group">
           
            <div class="col-md-12 form-label-group">
                @Html.TextBoxFor(model => model.Father, new { placeholder = "Father", @class = "form-control mm-cont" })
                @Html.ValidationMessageFor(model => model.Father)
                @Html.LabelFor(model => model.Father, new { @class = "control-label col-md-2" })
            </div>

        </div>
        <div class="form-group">

            <div class="col-md-12 form-label-group">
                @Html.TextBoxFor(model => model.Mother, new { placeholder = "Father", @class = "form-control mm-cont" })
                @Html.ValidationMessageFor(model => model.Mother)
                @Html.LabelFor(model => model.Mother, new { @class = "control-label col-md-2" })
            </div>

        </div>

        
        <div class="form-group">
            @Html.LabelFor(model => model.MartalStatus, new { @class = "control-label col-md-2" })
