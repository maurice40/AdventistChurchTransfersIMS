                Single
                @Html.RadioButtonFor(model => model.MartalStatus, "Single")
                Married
                @Html.RadioButtonFor(model => model.MartalStatus, "Married")
                @Html.ValidationMessageFor(model => model.MartalStatus)
                Widowed
                @Html.RadioButtonFor(model => model.MartalStatus, "Widow")
                @Html.ValidationMessageFor(model => model.MartalStatus)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 form-label-group">
                @Html.TextBoxFor(model => model.BaptismYear, new { placeholder = "Baptism Year", @class = "form-control mm-cont" })
                @Html.ValidationMessageFor(model => model.BaptismYear)
                @Html.LabelFor(model => model.BaptismYear, new { @class = "control-label col-md-2" })
            </div>

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Photo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Photo)
                @Html.ValidationMessageFor(model => model.Photo)
            </div>
        </div>

