@model ACTMS.Models.Christian

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Christian</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            
            <div class="col-md-12 form-label-group">
                @Html.TextBoxFor(model => model.Firstname, new { placeholder = "First Name", @class = "form-control mm-cont" })
                @Html.ValidationMessageFor(model => model.Firstname)
                @Html.LabelFor(model => model.Firstname, new { @class = "control-label col-md-2" })
            </div>
        </div>
        

        <div class="form-group">
          
            <div class="col-md-12 form-label-group">
                @Html.TextBoxFor(model => model.Lastname, new { placeholder = "Last Name", @class = "form-control mm-cont" })
                @Html.ValidationMessageFor(model => model.Lastname)
                @Html.LabelFor(model => model.Lastname, new { @class = "control-label col-md-2" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12 form-label-group">
                @Html.TextBoxFor(model => model.BirthYear, new { placeholder = "Birth Year", @class = "form-control mm-cont" })
