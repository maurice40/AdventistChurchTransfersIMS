@model ACTMS.ViewModels.NewChurchViewModel
@{
    ViewBag.Title = "New Church";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Add New Church</h2>

@using (Html.BeginForm("Create", "Church"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Church.Name )
        @Html.TextBoxFor(m => m.Church.Name, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Church.Address )
        @Html.TextBoxFor(m => m.Church.Address, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Church.ProvinceId)
        @Html.DropDownListFor(m => m.Church.ProvinceId, new SelectList(Model.Provinces, "Id", "Name"),"Select a Province", new { @class = "form-control" })
    </div>
    <button class="btn btn-primary" type="submit">Save</button>
}


