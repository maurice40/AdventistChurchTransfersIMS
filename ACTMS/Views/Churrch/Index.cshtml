@model IEnumerable<ACTMS.Models.Churrch>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Common.cshtml";
}

<h4>List of Churches</h4>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-sm" id=" mm-churches">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Province.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Province.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            $("#mm-churches").DataTable();

        });
    </script>
}
